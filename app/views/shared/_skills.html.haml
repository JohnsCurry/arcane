=link_to 'Logout', logout_path if current_user != nil
.above_menu Categories
.menu_box
  -@categories.each do |category|
    .menu_button= link_to "#{category.name}", category_path(category)
    %br

.right_of_menu
  -skills.each_with_index do |skill, index|
    -if skill.banner == nil || skill.banner == ""
      %br
      =link_to 'edit', edit_skill_path(skill) if current_user != nil
      .well
        %h2= skill.title
        =image_tag skill.image
        .right_of_image
          %strong= link_to "#{skill.title}", skill.url, :target => '_blank'
          %br
          %strong.code#message Description:
          %br
          %strong= wrap(skill.description.to_s, 65)
          %br
          %strong.code#message Price:
          %strong= skill.price
    -else
      %br
      =link_to 'edit', edit_skill_path(skill) if current_user != nil
      .well
        %h2= skill.title
        =image_tag skill.image
        .right_of_image
          = skill.banner.html_safe
          %br
          %strong.code#message Description:
          %br
          %strong= wrap(skill.description.to_s, 65)
          %br
          %strong.code#message Price:
          %strong= skill.price
    .clear
.top_of_menu
